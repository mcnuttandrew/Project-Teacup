<div class="row">
	<div class="col-xs-9"> 
	<h5> 	
		<%= comment.get('content')%>
		<br> 
		<strong >Posted By 
		<% if(comment.get('username')){%>
			<a href="#/users/<%=comment.get('user_id')%>"><%= comment.get('username')%> </a>
		<%} else { %>
			You
		<%}%>
		</strong>
	</h5>
	</div>
	<div class="col-xs-2 singlecomment">
		<%if(comment.get('user_id') === $("#currentUser").data().id) {%>
			<button class="btn cancel-button btn-mini" id="remove-comment"> X </button>
		<%} %>
	</div>
</div>