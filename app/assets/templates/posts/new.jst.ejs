<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<img src="assets/placeholder.jpeg"  class="img-circle img-responsive">
	</div>
</div>
<div class="row">
	<div class="col-xs-11">
		<div class="row">
			<div class="col-xs-6 col-xs-offset-1" style="word-wrap:break-word">
				<h1>
					<a href="#/users/<%= user.get('id')%>"><%= user.get('username')%></a>
				</h1>
			</div>
			<div class="col-xs-4">
				<br>
				
				<button class="btn btn-info btn-small following-btn" type="button"> Following <%= followingCount %> </button>
				<button class="btn btn-info btn-small followers-btn" type="button"> Followers <%= followerCount %> </button>
		  </div>
		</div>
		<div class="col-xs-12">
		<form class="post-submit" class="input-large">
			<textarea id="content" name="content" type="text"
			 class="form-control" placeholder="post a tweet"></textarea>
			<img src="assets/placeholder_map.png"  class="img-responsive">
			<input id="location" name="location" type="text"
			 class="form-control" placeholder="Enter location placegolder">
			<button class="btn  btn-info">Submit </button>
		</form>
			</div>
	</div>
</div>