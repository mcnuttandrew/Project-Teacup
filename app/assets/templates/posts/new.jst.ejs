<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		
		<img src="assets/placeholder.jpeg"  class="img-circle img-responsive">
	</div>
</div>
<div class="row">
	<div class="col-xs-11">
		<div class="row">
			<div class="col-xs-12 col-xs-offset-1 " style="word-wrap:break-word">
				<h1 class="text-center">
					<a href="#/users/<%= user.get('id')%>"><%= user.get('username')%></a>
				</h1>
			</div>
			<div class="col-xs-12 text-center" style="word-wrap:break-word">
					<div class="col-xs-6"> 
						<button class="btn btn-info following"> Following: <%=user.followingCount()%></button>
					</div>
					<div class="col-xs-6">
						 <button class="btn btn-info followers"> Followers: <%=user.followerCount()%></button
					</div>
		  </div>
		</div>

		<div class="col-xs-12 text-center">
			
			<strong>CHARS LEFT</strong> <strong class="chars-left">250</strong>
		<form class="post-submit" class="input-large">
			<textarea id="content" name="content" type="text"
			 class="form-control" placeholder="post a tweet"></textarea>
			<!-- <img src="http://maps.google.com/maps/api/staticmap?center=33.873415,-115.900992&zoom=9&markers=33.873415,-115.900992&size=500x300&sensor=TRUE_OR_FALSE"  class="img-responsive"> -->

			<strong> WHERE WERE YOU </strong>
			<div "location-subform">
				<strong>LATITUDE</strong>
				<input id="latitude" name="latitude" type="search"
				 class="form-control" value="33.873415">
				<strong> LONGITUDE</strong>
	 			<input id="longitude" name="longitude" type="text"
	 			 class="form-control" value="-115.900992">
			 </div>
			 
			<button class="btn  btn-info">Submit </button>
		</form>
				<div class="map"></div>
			</div>
	</div>
</div>