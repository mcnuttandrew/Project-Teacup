

<div class="row">
	<div class="col-xs-12 user-info">
		<br>
		<div class="col-xs-8 col-xs-offset-2 text-center">
			<img src="assets/placeholder_2.jpg"  class="img-circle img-responsive">
		</div>
	
			<div class="row">
				<div class="col-xs-12  text-center" style="word-wrap:break-word">
					<h1 class="text-center">
						<a href="#/users/<%= user.get('id')%>"><%= user.get('username')%></a>
					</h1>
				</div>
				<div class="col-xs-12 text-center" style="word-wrap:break-word">
						<div class="col-xs-6"> 
							<button class="btn btn-info following"> Following: <%=user.followingCount()%></button>
						</div>
						<div class="col-xs-6">
							 <button class="btn btn-info followers"> Followers: <%=user.followerCount()%></button
						</div>
			  </div>
				<br><br><br>
			</div>
		</div>
	</div>

		<div class="col-xs-12 text-center post-info">
			<div class="errors" role="alert"></div>
			<strong>CHARS LEFT</strong> <strong class="chars-left">250</strong>
			<form class="post-submit" class="input-large">
				<textarea id="content" name="content" type="text"
				 class="form-control" placeholder="post a tweet" style="width:250px"></textarea>
				<strong> WHERE WERE YOU </strong>
				<div class = "location-subform">
						<input id="geocoderInput" name="geocoder" type="text"
						class="form-control" placeholder="Enter a Location">
				 </div>
 				<strong> WHERE WAS YOUR DREAM  </strong>
 				<div class="dream-location-subform">
 						<input id="geocoderInputDream" name="geocoderInputDream" type="text"
 						class="form-control" placeholder="Enter a Location">
 				 </div>
				<strong> WHEN WAS IT?</strong> 
					<div class="datepicker-wrapper">
					
					 <input id="meeting" type="date" placeholder="2011-01-13" name="date"/>
			 </div>
			 
				 <br>
				<button class="btn  btn-info">Submit </button>
				
			</form>
		</div>
		<div class="trends col-xs-12"></div>
	</div>
	
</div>
