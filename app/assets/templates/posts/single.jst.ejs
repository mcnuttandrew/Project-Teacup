<li class="expandPost"  data-id="<%=post.id%>">
	<%if(dets.length === 0 ){%>
		<h4><%=post.get('content')%></h4> 
	<%} else {%>
		<h4>
			<!-- <%=post.get('content').substr(0, dets[0][2])%> <a href="#/users/<%=dets[0][0]%>">@<%=dets[0][1]%> </a>
			<%for(var i = 1; i < dets.length; i++){%>
				<%=post.get('content').substring(dets[i-1][3], dets[i][2])%> <a href="#/users/<%=dets[i][0]%>">@<%=dets[i][1]%> </a>
			<%} %>
			<%=post.get('content').substr(dets[dets.length-1][3])%> -->
			<%=post.get('content').substr(0, dets[0][2])%>
			<%for(var i = 0; i< dets.length; i++){%>
				<a href="#/users/<%=dets[i][0]%>"><%=post.get("content").substring(dets[i][2], dets[i][3])%></a>
				<%if(i+1 < dets.length){%>
					<%= post.get("content").substring(dets[i][3],dets[i+1][2] )%>
				<%} else {%>
					<%= post.get("content").substr(dets[i][3])%>
				<%}%>
			<%}%>
			<%=dets%>
		</h4>
		
	<%}%>
	
	<h6>
		<div class="row">
			<div class="col-xs-5 col-xs-offset-7">
				<%if($("#currentUser").data().id === user.get('id')){%> 
					<button class="removeTweet">delete post</button>
				<%} else{ %>
					Posted by
					<a href="#/users/<%= user.get('id')%>">
						<%= user.get('username')%>
					</a>
				<% } %>
			</div>
		</div>
	</h6>
</li>