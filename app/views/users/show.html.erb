<h1> This is the show page for <%= @user.username%></h1>

<% if @user.id != current_user.id%>
	<% if current_user.followees.include?(@user)%>
		<%= link_to "Unfollow", user_followship_url(@user.id), method: :delete%>
	<%else%>
		<%= link_to "Follow", user_followship_url(@user.id), method: :post%>
	<%end%>
<%end%>

<%= link_to "Index", users_url%>

<% if @user.posts %>
	<ul>
	<% @user.posts.each do |post| %>
		<li> <%=post.content%>
				<% if post.user_id == current_user.id%>
					<%= button_to "X", post_url(post), method: :delete%>
				<%end%>
				<%=render 'comments/form', post: post%>
				<%=render 'comments/index', post: post%>
		</li>
	<% end %>
	</ul>
<%end%>

<%if  @user.id == current_user.id%>
	<%=render 'posts/form'%>
<%end%>

